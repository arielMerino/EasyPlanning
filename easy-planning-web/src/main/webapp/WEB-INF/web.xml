<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/login.xhtml</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>coordinador_docente</display-name>
        <web-resource-collection>
            <web-resource-name>asignacion_horaria</web-resource-name>
            <description/>
            <url-pattern>/faces/asignacion_horaria/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>asignaturas</web-resource-name>
            <description/>
            <url-pattern>/faces/asignaturas/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>encuesta</web-resource-name>
            <description/>
            <url-pattern>/faces/encuesta/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>plan_de_estudios</web-resource-name>
            <description/>
            <url-pattern>/faces/plan_de_estudios/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>profesor</web-resource-name>
            <description/>
            <url-pattern>/faces/profesor/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Coordinador Docente</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>secretaria</display-name>
        <web-resource-collection>
            <web-resource-name>secretaria</web-resource-name>
            <description/>
            <url-pattern>/faces/secretaria/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Secretaria</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>profesor</display-name>
        <web-resource-collection>
            <web-resource-name>profesor</web-resource-name>
            <description/>
            <url-pattern>/faces/view_profesor/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Profesor</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>jdbcRealm</realm-name>
        <form-login-config>
            <form-login-page>/faces/login.xhtml</form-login-page>
            <form-error-page>/faces/login.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>Coordinador Docente</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Secretaria</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Profesor</role-name>
    </security-role>
</web-app>
